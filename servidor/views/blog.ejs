<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <style>
    body {
      background-color: #f5f5f5; /* Cor de fundo */
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
    }
    .container {
      max-width: 800px;
      margin: 0 auto; /* Centralização */
      text-align: center;
    }
    .btn-new-post {
      background-color: #4CAF50;
      color: white;
      padding: 10px 20px;
      text-decoration: none;
      border-radius: 5px;
      margin-bottom: 20px;
      display: inline-block;
    }
    .post {
      background: white;
      padding: 20px;
      margin-bottom: 20px;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      text-align: left;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Blog</h1>
    <a href="/cadastrar_post" class="btn-new-post">Criar Novo Post</a>
    
    <% posts.forEach(post => { %>
      <div class="post">
        <h2><%= post.titulo %></h2>
        <p><em><%= post.resumo %></em></p>
        <p><%= post.conteudo %></p>
        <small>Postado em: <%= post.createdAt.toLocaleDateString() %></small>
      </div>
    <% }); %>
  </div>
</body>
</html>